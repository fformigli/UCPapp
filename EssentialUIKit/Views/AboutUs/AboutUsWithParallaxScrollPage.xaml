<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="EssentialUIKit.Views.AboutUs.AboutUsWithParallaxScrollPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:border="clr-namespace:Syncfusion.XForms.Border;assembly=Syncfusion.Core.XForms"
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:listView="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms"
    xmlns:parallax="clr-namespace:Syncfusion.XForms.ParallaxView;assembly=Syncfusion.SfParallaxView.XForms"
    xmlns:viewModel="clr-namespace:EssentialUIKit.ViewModels.About"
    Title="About Us"
    BackgroundColor="{DynamicResource Gray-White}"
    NavigationPage.HasNavigationBar="False"
    Shell.NavBarIsVisible="False">
    <ContentPage.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>

        <Grid RowSpacing="0" VerticalOptions="Center">
            <Grid.BindingContext>
                <viewModel:AboutUsViewModel />
            </Grid.BindingContext>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Background image  -->
            <ffimageloading:CachedImage
                Grid.Row="0"
                Aspect="Fill"
                BackgroundColor="{DynamicResource Gray-F0}"
                BindingContext="{x:Reference AboutUs}"
                HeightRequest="{Binding Height}"
                Source="About.png" />

            <!--  Product details  -->
            <StackLayout
                x:Name="AboutUs"
                Grid.Row="0"
                Margin="0,0,0,23"
                VerticalOptions="Start">

                <!--  Header  -->
                <Label
                    Margin="0,24,0,16"
                    FontSize="20"
                    Style="{StaticResource HeaderLabelStyle}"
                    Text="About Us" />

                <!--  Product description  -->
                <Label
                    Margin="16,0,16,0"
                    Style="{StaticResource DescriptionLabelStyle}"
                    Text="{Binding ProductDescription}" />
            </StackLayout>

            <parallax:SfParallaxView
                Grid.Row="1"
                Source="{x:Reference Name=OurTeam}"
                Speed="0.5">
                <parallax:SfParallaxView.Content>
                    <!--  Background image  -->
                    <ffimageloading:CachedImage
                        Aspect="AspectFill"
                        BackgroundColor="{DynamicResource Gray-F0}"
                        HorizontalOptions="Fill"
                        Source="OurTeam.png"
                        VerticalOptions="Fill" />
                </parallax:SfParallaxView.Content>
            </parallax:SfParallaxView>

            <!--  To display the team member's details  -->
            <listView:SfListView
                x:Name="OurTeam"
                Grid.Row="1"
                AutoFitMode="Height"
                ItemsSource="{Binding EmployeeDetails}"
                SelectionMode="None"
                TapCommand="{Binding ItemSelectedCommand}"
                VerticalOptions="Start">

                <listView:SfListView.HeaderTemplate>
                    <DataTemplate>
                        <!--  Header  -->
                        <Label
                            Margin="0,60,0,5"
                            FontSize="20"
                            Style="{StaticResource HeaderLabelStyle}"
                            Text="Our Team"
                            TextColor="White" />
                    </DataTemplate>
                </listView:SfListView.HeaderTemplate>

                <listView:SfListView.ItemTemplate>
                    <DataTemplate>

                        <!--  Details of each employee  -->
                        <StackLayout Margin="15,15,15,24" Spacing="0">

                            <!--  Profile image  -->
                            <border:SfBorder
                                Margin="0,0,0,8"
                                BorderWidth="0"
                                CornerRadius="32"
                                HorizontalOptions="Center"
                                VerticalOptions="Center">
                                <ffimageloading:CachedImage
                                    BackgroundColor="{DynamicResource Gray-F0}"
                                    Source="{Binding Image}"
                                    Style="{StaticResource AboutUsImageStyle}" />
                            </border:SfBorder>

                            <!--  Employee name  -->
                            <Label
                                FontFamily="{StaticResource Montserrat-SemiBold}"
                                HorizontalTextAlignment="Center"
                                Style="{StaticResource DescriptionLabelStyle}"
                                Text="{Binding EmployeeName}"
                                TextColor="White" />

                            <!--  Designation  -->
                            <Label
                                HorizontalTextAlignment="Center"
                                Style="{StaticResource VersionLabelStyle}"
                                Text="{Binding Designation}"
                                TextColor="White" />

                        </StackLayout>
                    </DataTemplate>
                </listView:SfListView.ItemTemplate>

                <listView:SfListView.LayoutManager>
                    <listView:GridLayout SpanCount="3" />
                </listView:SfListView.LayoutManager>
            </listView:SfListView>
        </Grid>
    </ContentPage.Content>
</ContentPage>
