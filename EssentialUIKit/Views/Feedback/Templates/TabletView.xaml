<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="EssentialUIKit.Views.Feedback.Templates.TabletView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:rating="clr-namespace:Syncfusion.SfRating.XForms;assembly=Syncfusion.SfRating.XForms"
    BackgroundColor="#4C000000">

    <ContentView.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentView.Resources>

    <ContentView.Content>

        <Frame
            Margin="0"
            Padding="0"
            CornerRadius="4"
            HasShadow="True"
            HeightRequest="386"
            HorizontalOptions="CenterAndExpand"
            VerticalOptions="CenterAndExpand"
            WidthRequest="632">

            <Grid
                BackgroundColor="{DynamicResource Gray-White}"
                ColumnSpacing="16"
                HeightRequest="386"
                HorizontalOptions="CenterAndExpand"
                RowSpacing="0"
                VerticalOptions="CenterAndExpand"
                WidthRequest="632">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Product Image  -->
                <ffimageloading:CachedImage
                    x:Name="ProductImage"
                    Grid.RowSpan="2"
                    Aspect="AspectFill"
                    BackgroundColor="{DynamicResource Gray-F0}"
                    HeightRequest="385"
                    WidthRequest="315" />

                <StackLayout
                    Grid.Column="1"
                    Padding="0,16"
                    Spacing="0"
                    VerticalOptions="Start">

                    <StackLayout Orientation="Horizontal" VerticalOptions="Start">

                        <!--  Customer Name  -->
                        <Label
                            Margin="0,0,16,4"
                            FontFamily="{StaticResource Montserrat-SemiBold}"
                            FontSize="16"
                            Style="{StaticResource LabelStyle}"
                            Text="Jane Deo"
                            TextColor="{DynamicResource Gray-56}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ProfileCommand}" CommandParameter="{Binding .}" />
                            </Label.GestureRecognizers>
                        </Label>

                        <!--  Close button  -->
                        <buttons:SfButton
                            Margin="0,0,8,0"
                            Padding="0"
                            BackgroundColor="Transparent"
                            Command="{Binding CloseCommand}"
                            FontFamily="{StaticResource FontIcons}"
                            FontSize="18"
                            HeightRequest="32"
                            HorizontalOptions="EndAndExpand"
                            Text="{StaticResource Close}"
                            TextColor="{DynamicResource Gray-AB}"
                            WidthRequest="32" />

                    </StackLayout>

                    <!--  Product Review  -->
                    <Label
                        FontFamily="{StaticResource Montserrat-Medium}"
                        FontSize="14"
                        Style="{StaticResource LabelStyle}"
                        Text="These boots are stunning and I look stunning in them." />

                    <!--  Product Rating and Total Reviews  -->
                    <StackLayout
                        Padding="0,8,0,16"
                        IsVisible="{OnIdiom Phone=False,
                                            Default=True}"
                        Orientation="Horizontal">

                        <rating:SfRating
                            RatingSettings="{StaticResource RatingSettings}"
                            Style="{StaticResource SfRatingStyle}"
                            Value="5" />
                        <Label
                            Margin="2,0,0,0"
                            FontFamily="{StaticResource Montserrat-Medium}"
                            FontSize="12"
                            Style="{StaticResource LabelStyle}"
                            Text="534 Ratings" />
                    </StackLayout>

                    <!--  Product images  -->
                    <StackLayout
                        BindableLayout.ItemsSource="{Binding Images}"
                        HeightRequest="60"
                        Orientation="Horizontal"
                        Spacing="10"
                        VerticalOptions="Start">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <ffimageloading:CachedImage
                                    Aspect="Fill"
                                    BackgroundColor="{DynamicResource Gray-F0}"
                                    HeightRequest="50"
                                    Source="{Binding .}"
                                    WidthRequest="60" />
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </StackLayout>

                </StackLayout>

            </Grid>
        </Frame>

    </ContentView.Content>
</ContentView>